<%- include("../partials/header") %>
<div class="container">
 <h1 style="margin: 3% auto; text-align: center;">Add Campground</h1>
 <div style="width : 40%; margin: 2% auto">
 <form action="/campgrounds" method="POST">
    <div class="form-group">
      <label for="Location">Name</label>
      <input type="text" class="form-control" name="name" id="Location"  placeholder="Enter Location">
    </div>

    <div class="form-group">
      <label for="image">Image Url</label>
      <input class="form-control" type="text" name="url" id="ImageUrl" title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/..." required>
      <small>For tutorial on how to copy unsplash urls.</small>
  </div>
  <div class="form-group">
      <label for="cost">Cost</label>
      <input class="form-control" type="number" name="cost" id="cost" placeholder="100" step="100" min="0" required>
      <small>Enter the cost per night in Indian rupees</small>
  </div>
  <div class="form-group">
      <label for="location">Location</label>
      <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
  </div>
<div class="form-group">
      <label for="Description">Description</label>
      <textarea  class="form-control" id="description" placeholder="Describe these Camp!" name="description"></textarea>
    </div>
    <button type="submit" class="btn btn-primary btn-block">ADD</button>
 </form>
 <a  href="/campgrounds">view Campgrounds</a>
 </div>

 
</div>
<%- include("../partials/footer") %>